    "responses": {
      "SuccessResponse": {
        "description": "성공 응답",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": true
                },
                "data": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
