          },
          "weddSectOrdr": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WeddSectOrdr"
            }
          }
        }
      },
      "WeddTransactionResult": {
        "type": "object",
        "properties": {
          "wedd": {
            "$ref": "#/components/schemas/WeddSimple"
          },
          "weddDtl": {
            "type": "object",
            "description": "상세 데이터 (내부 전용)"
